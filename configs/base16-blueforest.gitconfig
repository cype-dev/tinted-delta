# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Blue Forest
# Scheme Author: alonsodomin (https://github.com/alonsodomin)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#fffab1"
    minus-emph-style = reverse "#0099ff"
    plus-style = reverse "#80ff80"
    plus-emph-style = reverse "#0099ff"
