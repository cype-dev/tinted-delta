# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Helios
# Scheme Author: Alex Meyer (https://github.com/reyemxela)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#d72638"
    minus-emph-style = reverse "#be4264"
    plus-style = reverse "#88b92d"
    plus-emph-style = reverse "#be4264"
