# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ff585d"
    minus-emph-style = reverse "#d59ed7"
    plus-style = reverse "#78d64b"
    plus-emph-style = reverse "#d59ed7"
