# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Apprentice
# Scheme Author: romainl
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#444444"
    minus-emph-style = reverse "#5fafaf"
    plus-style = reverse "#ffffaf"
    plus-emph-style = reverse "#5fafaf"
