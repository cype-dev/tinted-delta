# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Brush Trees
# Scheme Author: Abraham White &lt;abelincoln.white@gmail.com&gt;
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#b38686"
    minus-emph-style = reverse "#b386b2"
    plus-style = reverse "#87b386"
    plus-emph-style = reverse "#b386b2"
