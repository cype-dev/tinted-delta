# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#9b281b"
    minus-emph-style = reverse "#9b1d29"
    plus-style = reverse "#626132"
    plus-emph-style = reverse "#9b1d29"
