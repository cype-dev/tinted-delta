# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#db2d20"
    minus-emph-style = reverse "#a16a94"
    plus-style = reverse "#01a252"
    plus-emph-style = reverse "#a16a94"
