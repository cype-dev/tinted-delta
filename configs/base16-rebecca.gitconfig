# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Rebecca
# Scheme Author: Victor Borja (http://github.com/vic) based on Rebecca Theme (http://github.com/vic/rebecca-theme)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#a0a0c5"
    minus-emph-style = reverse "#7aa5ff"
    plus-style = reverse "#6dfedf"
    plus-emph-style = reverse "#7aa5ff"
