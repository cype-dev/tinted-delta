# vim: ft=gitconfig
# Scheme System: base24
# Scheme Name: Mission Brogue
# Scheme Author: Thomas Leon Highbaugh
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#efa9a9"
    minus-emph-style = reverse "#ccb7db"
    plus-style = reverse "#8cd4b0"
    plus-emph-style = reverse "#ccb7db"
