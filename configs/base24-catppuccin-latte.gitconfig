# vim: ft=gitconfig
# Scheme System: base24
# Scheme Name: Catppuccin Latte
# Scheme Author: https://github.com/catppuccin/catppuccin
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#d20f39"
    minus-emph-style = reverse "#8839ef"
    plus-style = reverse "#40a02b"
    plus-emph-style = reverse "#8839ef"
