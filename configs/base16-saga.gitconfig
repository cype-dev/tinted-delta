# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: SAGA
# Scheme Author: https://github.com/SAGAtheme/SAGA
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ffd4e9"
    minus-emph-style = reverse "#dcc3f9"
    plus-style = reverse "#f7ddff"
    plus-emph-style = reverse "#dcc3f9"
