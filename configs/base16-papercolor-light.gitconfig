# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: PaperColor Light
# Scheme Author: Jon Leopard (http://github.com/jonleopard), based on PaperColor Theme (https://github.com/NLKNguyen/papercolor-theme)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#bcbcbc"
    minus-emph-style = reverse "#005faf"
    plus-style = reverse "#8700af"
    plus-emph-style = reverse "#005faf"
