# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Cupertino
# Scheme Author: Defman21
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#c41a15"
    minus-emph-style = reverse "#a90d91"
    plus-style = reverse "#007400"
    plus-emph-style = reverse "#a90d91"
