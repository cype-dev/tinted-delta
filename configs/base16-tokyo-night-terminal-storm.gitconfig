# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#f7768e"
    minus-emph-style = reverse "#bb9af7"
    plus-style = reverse "#41a6b5"
