# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Brogrammer
# Scheme Author: Vik Ramanujam (http://github.com/piggyslasher)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#d6dbe5"
    minus-emph-style = reverse "#0f7ddb"
    plus-style = reverse "#f3bd09"
    plus-emph-style = reverse "#0f7ddb"
