# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Moonlight
# Scheme Author: Jeremy Swinarton (https://github.com/jswinarton)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ff5370"
    minus-emph-style = reverse "#b994f1"
    plus-style = reverse "#2df4c0"
    plus-emph-style = reverse "#b994f1"
