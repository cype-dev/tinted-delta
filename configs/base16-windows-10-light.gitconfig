# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Windows 10 Light
# Scheme Author: Fergus Collins (https://github.com/ferguscollins)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#c50f1f"
    minus-emph-style = reverse "#881798"
    plus-style = reverse "#13a10e"
    plus-emph-style = reverse "#881798"
