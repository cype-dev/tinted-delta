# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Icy Dark
# Scheme Author: icyphox (https://icyphox.ga)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#16c1d9"
    minus-emph-style = reverse "#00acc1"
    plus-style = reverse "#4dd0e1"
    plus-emph-style = reverse "#00acc1"
