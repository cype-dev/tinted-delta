# vim: ft=gitconfig
# Scheme System: base24
# Scheme Name: Github Light
# Scheme Author: Tinted Theming (https://github.com/tinted-theming)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#fa4549"
    minus-emph-style = reverse "#a475f9"
    plus-style = reverse "#2da44e"
    plus-emph-style = reverse "#a475f9"
