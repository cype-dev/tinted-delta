# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Mocha
# Scheme Author: Chris Kempson (http://chriskempson.com)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#cb6077"
    minus-emph-style = reverse "#a89bb9"
    plus-style = reverse "#beb55b"
    plus-emph-style = reverse "#a89bb9"
