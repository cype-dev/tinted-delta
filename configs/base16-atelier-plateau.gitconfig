# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ca4949"
    minus-emph-style = reverse "#8464c4"
    plus-style = reverse "#4b8b8b"
    plus-emph-style = reverse "#8464c4"
