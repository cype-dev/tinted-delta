# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#e52222"
    minus-emph-style = reverse "#fa2573"
    plus-style = reverse "#a6e32d"
    plus-emph-style = reverse "#fa2573"
