# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Tomorrow Night Eighties
# Scheme Author: Chris Kempson (http://chriskempson.com)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#f2777a"
    minus-emph-style = reverse "#cc99cc"
    plus-style = reverse "#99cc99"
    plus-emph-style = reverse "#cc99cc"
