# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Terracotta
# Scheme Author: Alexander Rossell Hayes (https://github.com/rossellhayes)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#a75045"
    minus-emph-style = reverse "#8d5968"
    plus-style = reverse "#7a894a"
    plus-emph-style = reverse "#8d5968"
