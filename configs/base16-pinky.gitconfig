# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: pinky
# Scheme Author: Benjamin (https://github.com/b3nj5m1n)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ffa600"
    minus-emph-style = reverse "#007fff"
    plus-style = reverse "#ff0066"
    plus-emph-style = reverse "#007fff"
