# vim: ft=gitconfig
# Scheme System: base24
# Scheme Name: Blue Matrix
# Scheme Author: FredHappyface (https://github.com/fredHappyface)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ff567f"
    minus-emph-style = reverse "#d47bfe"
    plus-style = reverse "#00ff9b"
    plus-emph-style = reverse "#d47bfe"
