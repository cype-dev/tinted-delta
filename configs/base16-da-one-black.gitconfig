# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Da One Black
# Scheme Author: NNB (https://github.com/NNBnh)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#fa7883"
    minus-emph-style = reverse "#e799ff"
    plus-style = reverse "#98c379"
    plus-emph-style = reverse "#e799ff"
