# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: emil
# Scheme Author: limelier
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#f43979"
    minus-emph-style = reverse "#6916b6"
    plus-style = reverse "#0073a8"
    plus-emph-style = reverse "#6916b6"
