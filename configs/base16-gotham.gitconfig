# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Gotham
# Scheme Author: Andrea Leopardi (arranged by Brett Jones)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#c23127"
    minus-emph-style = reverse "#888ca6"
    plus-style = reverse "#33859e"
    plus-emph-style = reverse "#888ca6"
