# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Zenburn
# Scheme Author: elnawe
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#dca3a3"
    minus-emph-style = reverse "#dc8cc3"
    plus-style = reverse "#5f7f5f"
    plus-emph-style = reverse "#dc8cc3"
