# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Measured Light
# Scheme Author: Measured (https://measured.co)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#ac1f35"
    minus-emph-style = reverse "#6645c2"
    plus-style = reverse "#0c680c"
    plus-emph-style = reverse "#6645c2"
