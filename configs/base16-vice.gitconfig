# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ff29a8"
    minus-emph-style = reverse "#00f6d9"
    plus-style = reverse "#0badff"
    plus-emph-style = reverse "#00f6d9"
