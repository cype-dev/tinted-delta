# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Spacemacs
# Scheme Author: Nasser Alshammari (https://github.com/nashamri/spacemacs-theme)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#f2241f"
    minus-emph-style = reverse "#a31db1"
    plus-style = reverse "#67b11d"
    plus-emph-style = reverse "#a31db1"
