# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Porple
# Scheme Author: Niek den Breeje (https://github.com/AuditeMarlow)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#f84547"
    minus-emph-style = reverse "#b74989"
    plus-style = reverse "#95c76f"
    plus-emph-style = reverse "#b74989"
