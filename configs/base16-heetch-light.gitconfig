# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Heetch Light
# Scheme Author: Geoffrey Teale (tealeg@gmail.com)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#27d9d5"
    minus-emph-style = reverse "#bd0152"
    plus-style = reverse "#f80059"
    plus-emph-style = reverse "#bd0152"
