# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Pasque
# Scheme Author: Gabriel Fontes (https://github.com/Misterio77)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#a92258"
    minus-emph-style = reverse "#953b9d"
    plus-style = reverse "#c6914b"
    plus-emph-style = reverse "#953b9d"
