# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Humanoid light
# Scheme Author: Thomas (tasmo) Friese
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#b0151a"
    minus-emph-style = reverse "#700f98"
    plus-style = reverse "#388e3c"
    plus-emph-style = reverse "#700f98"
