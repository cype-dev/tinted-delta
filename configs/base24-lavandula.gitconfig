# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#7c1525"
    minus-emph-style = reverse "#593f7e"
    plus-style = reverse "#337e6f"
    plus-emph-style = reverse "#593f7e"
