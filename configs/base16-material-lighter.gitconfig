# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Material Lighter
# Scheme Author: Nate Peterson
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#ff5370"
    minus-emph-style = reverse "#7c4dff"
    plus-style = reverse "#91b859"
    plus-emph-style = reverse "#7c4dff"
