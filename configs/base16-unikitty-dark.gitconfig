# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Unikitty Dark
# Scheme Author: Josh W Lewis (@joshwlewis)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#d8137f"
    minus-emph-style = reverse "#bb60ea"
    plus-style = reverse "#17ad98"
    plus-emph-style = reverse "#bb60ea"
