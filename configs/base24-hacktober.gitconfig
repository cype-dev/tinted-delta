# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#b34538"
    minus-emph-style = reverse "#864651"
    plus-style = reverse "#587744"
    plus-emph-style = reverse "#864651"
