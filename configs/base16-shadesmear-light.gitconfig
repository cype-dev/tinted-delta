# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: ShadeSmear Light
# Scheme Author: Kyle Giammarco (http://kyle.giammar.co)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#cc5450"
    minus-emph-style = reverse "#d7ab54"
    plus-style = reverse "#71983b"
    plus-emph-style = reverse "#d7ab54"
