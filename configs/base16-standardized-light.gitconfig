# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: standardized-light
# Scheme Author: ali (https://github.com/ali-githb/base16-standardized-scheme)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#d03e3e"
    minus-emph-style = reverse "#9e57c2"
    plus-style = reverse "#31861f"
    plus-emph-style = reverse "#9e57c2"
