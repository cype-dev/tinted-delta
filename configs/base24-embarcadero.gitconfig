# vim: ft=gitconfig
# Scheme System: base24
# Scheme Name: Embarcadero
# Scheme Author: Thomas Leon Highbaugh
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ed5d86"
    minus-emph-style = reverse "#a070d0"
    plus-style = reverse "#20c290"
    plus-emph-style = reverse "#a070d0"
