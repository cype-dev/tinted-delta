# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Equilibrium Light
# Scheme Author: Carlo Abelli
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#d02023"
    minus-emph-style = reverse "#4e66b6"
    plus-style = reverse "#637200"
    plus-emph-style = reverse "#4e66b6"
