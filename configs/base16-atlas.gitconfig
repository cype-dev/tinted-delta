# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Atlas
# Scheme Author: Alex Lende (https://ajlende.com)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ff5a67"
    minus-emph-style = reverse "#9a70a4"
    plus-style = reverse "#7fc06e"
    plus-emph-style = reverse "#9a70a4"
