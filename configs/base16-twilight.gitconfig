# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Twilight
# Scheme Author: David Hart (https://github.com/hartbit)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#cf6a4c"
    minus-emph-style = reverse "#9b859d"
    plus-style = reverse "#8f9d6a"
    plus-emph-style = reverse "#9b859d"
