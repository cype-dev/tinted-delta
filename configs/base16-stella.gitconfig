# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Stella
# Scheme Author: Shrimpram
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#c79987"
    minus-emph-style = reverse "#c594ff"
    plus-style = reverse "#acc79b"
    plus-emph-style = reverse "#c594ff"
