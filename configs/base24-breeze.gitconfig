# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ed1515"
    minus-emph-style = reverse "#9b59b6"
    plus-style = reverse "#11d116"
    plus-emph-style = reverse "#9b59b6"
