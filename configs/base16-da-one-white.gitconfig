# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Da One White
# Scheme Author: NNB (https://github.com/NNBnh)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#de5d6e"
    minus-emph-style = reverse "#c173d1"
    plus-style = reverse "#76a85d"
    plus-emph-style = reverse "#c173d1"
