# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: London Tube
# Scheme Author: Jan T. Sott
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ee2e24"
    minus-emph-style = reverse "#98005d"
    plus-style = reverse "#00853e"
    plus-emph-style = reverse "#98005d"
