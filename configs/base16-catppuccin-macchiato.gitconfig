# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Catppuccin Macchiato
# Scheme Author: https://github.com/catppuccin/catppuccin
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ed8796"
    minus-emph-style = reverse "#c6a0f6"
    plus-style = reverse "#a6da95"
    plus-emph-style = reverse "#c6a0f6"
