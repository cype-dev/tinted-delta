# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Railscasts
# Scheme Author: Ryan Bates (http://railscasts.com)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#da4939"
    minus-emph-style = reverse "#b6b3eb"
    plus-style = reverse "#a5c261"
    plus-emph-style = reverse "#b6b3eb"
