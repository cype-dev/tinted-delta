# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Sagelight
# Scheme Author: Carter Veldhuizen
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#fa8480"
    minus-emph-style = reverse "#c8a0d2"
    plus-style = reverse "#a0d2c8"
    plus-emph-style = reverse "#c8a0d2"
