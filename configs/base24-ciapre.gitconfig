# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#800009"
    minus-emph-style = reverse "#724c7c"
    plus-style = reverse "#48513b"
    plus-emph-style = reverse "#724c7c"
