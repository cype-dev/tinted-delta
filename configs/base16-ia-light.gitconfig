# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: iA Light
# Scheme Author: iA Inc. (modified by aramisgithub)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#9c5a02"
    minus-emph-style = reverse "#a94598"
    plus-style = reverse "#38781c"
    plus-emph-style = reverse "#a94598"
