# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: OneDark
# Scheme Author: Lalit Magant (http://github.com/tilal6991)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#e06c75"
    minus-emph-style = reverse "#c678dd"
    plus-style = reverse "#98c379"
    plus-emph-style = reverse "#c678dd"
