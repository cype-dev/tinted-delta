# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Blueish
# Scheme Author: Ben Mayoras
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#4ce587"
    minus-emph-style = reverse "#ff84dd"
    plus-style = reverse "#c3e88d"
    plus-emph-style = reverse "#ff84dd"
