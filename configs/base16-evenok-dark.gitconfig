# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Evenok Dark
# Scheme Author: Mekeor Melire
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#f5708a"
    minus-emph-style = reverse "#9095ff"
    plus-style = reverse "#54bc5c"
    plus-emph-style = reverse "#9095ff"
