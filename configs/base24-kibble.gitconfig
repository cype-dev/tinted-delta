# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#c70031"
    minus-emph-style = reverse "#8400ff"
    plus-style = reverse "#29cf13"
    plus-emph-style = reverse "#8400ff"
