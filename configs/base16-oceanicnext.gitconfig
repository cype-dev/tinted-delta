# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: OceanicNext
# Scheme Author: https://github.com/voronianski/oceanic-next-color-scheme
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ec5f67"
    minus-emph-style = reverse "#c594c5"
    plus-style = reverse "#99c794"
    plus-emph-style = reverse "#c594c5"
