# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Aztec
# Scheme Author: TheNeverMan (github.com/TheNeverMan)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ee2e00"
    minus-emph-style = reverse "#883e9f"
    plus-style = reverse "#63d932"
    plus-emph-style = reverse "#883e9f"
