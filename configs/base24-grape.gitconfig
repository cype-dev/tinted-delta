# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ec2160"
    minus-emph-style = reverse "#8c35c8"
    plus-style = reverse "#1fa91b"
    plus-emph-style = reverse "#8c35c8"
