# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#f8501a"
    minus-emph-style = reverse "#f02d4e"
    plus-style = reverse "#565746"
    plus-emph-style = reverse "#f02d4e"
