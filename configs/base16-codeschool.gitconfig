# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Codeschool
# Scheme Author: blockloop
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#2a5491"
    minus-emph-style = reverse "#c59820"
    plus-style = reverse "#237986"
    plus-emph-style = reverse "#c59820"
