# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Material Palenight
# Scheme Author: Nate Peterson
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#f07178"
    minus-emph-style = reverse "#c792ea"
    plus-style = reverse "#c3e88d"
    plus-emph-style = reverse "#c792ea"
