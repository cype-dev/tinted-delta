# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Fruit Soda
# Scheme Author: jozip
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#fe3e31"
    minus-emph-style = reverse "#611fce"
    plus-style = reverse "#47f74c"
    plus-emph-style = reverse "#611fce"
