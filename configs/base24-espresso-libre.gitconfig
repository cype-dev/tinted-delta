# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#cc0000"
    minus-emph-style = reverse "#c5656b"
    plus-style = reverse "#1a921c"
    plus-emph-style = reverse "#c5656b"
