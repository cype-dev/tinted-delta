# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#f72729"
    minus-emph-style = reverse "#9f00bc"
    plus-style = reverse "#32895c"
    plus-emph-style = reverse "#9f00bc"
