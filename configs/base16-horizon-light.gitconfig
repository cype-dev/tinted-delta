# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#f7939b"
    minus-emph-style = reverse "#1d8991"
    plus-style = reverse "#94e1b0"
    plus-emph-style = reverse "#1d8991"
