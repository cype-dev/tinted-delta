# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Shapeshifter
# Scheme Author: Tyler Benziger (http://tybenz.com)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#e92f2f"
    minus-emph-style = reverse "#f996e2"
    plus-style = reverse "#0ed839"
    plus-emph-style = reverse "#f996e2"
