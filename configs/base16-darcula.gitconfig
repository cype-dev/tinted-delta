# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Darcula
# Scheme Author: jetbrains
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#4eade5"
    minus-emph-style = reverse "#cc7832"
    plus-style = reverse "#6a8759"
    plus-emph-style = reverse "#cc7832"
