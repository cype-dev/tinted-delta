# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#8c3432"
    minus-emph-style = reverse "#896492"
    plus-style = reverse "#728271"
    plus-emph-style = reverse "#896492"
