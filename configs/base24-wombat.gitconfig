# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ff605a"
    minus-emph-style = reverse "#e86aff"
    plus-style = reverse "#b1e869"
    plus-emph-style = reverse "#e86aff"
