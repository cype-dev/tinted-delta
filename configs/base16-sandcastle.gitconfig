# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Sandcastle
# Scheme Author: George Essig (https://github.com/gessig)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#83a598"
    minus-emph-style = reverse "#d75f5f"
    plus-style = reverse "#528b8b"
    plus-emph-style = reverse "#d75f5f"
