# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ab2e30"
    minus-emph-style = reverse "#af8427"
    plus-style = reverse "#31ab60"
    plus-emph-style = reverse "#af8427"
