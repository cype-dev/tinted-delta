# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Penumbra Dark Contrast Plus Plus
# Scheme Author: Zachary Weiss (https://github.com/zacharyweiss)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#f58c81"
    minus-emph-style = reverse "#b69cf6"
    plus-style = reverse "#54c794"
    plus-emph-style = reverse "#b69cf6"
