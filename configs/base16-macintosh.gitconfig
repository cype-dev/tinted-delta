# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Macintosh
# Scheme Author: Rebecca Bettencourt (http://www.kreativekorp.com)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#dd0907"
    minus-emph-style = reverse "#4700a5"
    plus-style = reverse "#1fb714"
    plus-emph-style = reverse "#4700a5"
