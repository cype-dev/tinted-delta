# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#c82829"
    minus-emph-style = reverse "#8959a8"
    plus-style = reverse "#718c00"
    plus-emph-style = reverse "#8959a8"
