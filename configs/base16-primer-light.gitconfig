# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Primer Light
# Scheme Author: Jimmy Lin
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#d73a49"
    minus-emph-style = reverse "#ea4aaa"
    plus-style = reverse "#28a745"
    plus-emph-style = reverse "#ea4aaa"
