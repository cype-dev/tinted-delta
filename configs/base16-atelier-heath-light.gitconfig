# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Atelier Heath Light
# Scheme Author: Bram de Haan (http://atelierbramdehaan.nl)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#ca402b"
    minus-emph-style = reverse "#7b59c0"
    plus-style = reverse "#918b3b"
    plus-emph-style = reverse "#7b59c0"
