# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Oxocarbon Light
# Scheme Author: shaunsingh/IBM
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#ff7eb6"
    minus-emph-style = reverse "#be95ff"
    plus-style = reverse "#0f62fe"
    plus-emph-style = reverse "#be95ff"
