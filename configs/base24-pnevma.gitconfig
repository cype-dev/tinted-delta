# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#a36666"
    minus-emph-style = reverse "#c79ec4"
    plus-style = reverse "#90a57d"
    plus-emph-style = reverse "#c79ec4"
