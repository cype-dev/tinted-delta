# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Summerfruit Light
# Scheme Author: Christopher Corley (http://christop.club/)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#ff0086"
    minus-emph-style = reverse "#ad00a1"
    plus-style = reverse "#00c918"
    plus-emph-style = reverse "#ad00a1"
