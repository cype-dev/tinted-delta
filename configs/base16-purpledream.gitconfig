# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Purpledream
# Scheme Author: malet
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ff1d0d"
    minus-emph-style = reverse "#b000d0"
    plus-style = reverse "#14cc64"
    plus-emph-style = reverse "#b000d0"
