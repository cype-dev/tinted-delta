# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Mexico Light
# Scheme Author: Sheldon Johnson
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#ab4642"
    minus-emph-style = reverse "#96609e"
    plus-style = reverse "#538947"
    plus-emph-style = reverse "#96609e"
