# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#d61b15"
    minus-emph-style = reverse "#e40038"
    plus-style = reverse "#59a413"
    plus-emph-style = reverse "#e40038"
