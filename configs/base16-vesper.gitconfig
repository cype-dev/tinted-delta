# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Vesper
# Scheme Author: FormalSnake (https://github.com/formalsnake)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#de6e6e"
    minus-emph-style = reverse "#d69094"
    plus-style = reverse "#5f8787"
    plus-emph-style = reverse "#d69094"
