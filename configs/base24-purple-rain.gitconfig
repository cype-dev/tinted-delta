# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ff260d"
    minus-emph-style = reverse "#805bb5"
    plus-style = reverse "#9ae204"
    plus-emph-style = reverse "#805bb5"
