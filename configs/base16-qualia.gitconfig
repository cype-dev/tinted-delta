# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Qualia
# Scheme Author: isaacwhanson
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#efa6a2"
    minus-emph-style = reverse "#e0af85"
    plus-style = reverse "#80c990"
    plus-emph-style = reverse "#e0af85"
