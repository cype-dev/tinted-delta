# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Colors
# Scheme Author: mrmrs (http://clrs.cc)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ff4136"
    minus-emph-style = reverse "#b10dc9"
    plus-style = reverse "#2ecc40"
    plus-emph-style = reverse "#b10dc9"
