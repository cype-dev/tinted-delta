# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Edge Light
# Scheme Author: cjayross (https://github.com/cjayross)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = true
    minus-style = reverse "#db7070"
    minus-emph-style = reverse "#b870ce"
    plus-style = reverse "#7c9f4b"
    plus-emph-style = reverse "#b870ce"
