# vim: ft=gitconfig
# Scheme System: base24
# Scheme Name: 0x96f
# Scheme Author: Filip Janevski (https://0x96f.dev/theme)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ff7272"
    minus-emph-style = reverse "#a093e2"
    plus-style = reverse "#bcdf59"
    plus-emph-style = reverse "#a093e2"
