# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Digital Rain
# Scheme Author: Nathan Byrd (https://github.com/cognitivegears)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#c85a46"
    minus-emph-style = reverse "#9472b4"
    plus-style = reverse "#64c83c"
    plus-emph-style = reverse "#9472b4"
