# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Measured Dark
# Scheme Author: Measured (https://measured.co)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ce7e8e"
    minus-emph-style = reverse "#b39be0"
    plus-style = reverse "#56c16f"
    plus-emph-style = reverse "#b39be0"
