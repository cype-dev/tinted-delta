# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Tokyodark Terminal
# Scheme Author: Tiagovla (https://github.com/tiagovla/)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ee6d85"
    minus-emph-style = reverse "#a485dd"
    plus-style = reverse "#95c561"
    plus-emph-style = reverse "#a485dd"
