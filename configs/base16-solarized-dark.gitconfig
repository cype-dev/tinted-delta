# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Solarized Dark
# Scheme Author: Ethan Schoonover (modified by aramisgithub)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#dc322f"
    minus-emph-style = reverse "#6c71c4"
    plus-style = reverse "#859900"
    plus-emph-style = reverse "#6c71c4"
