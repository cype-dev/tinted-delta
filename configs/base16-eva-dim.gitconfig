# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#c4676c"
    minus-emph-style = reverse "#9c6cd3"
    plus-style = reverse "#5de561"
    plus-emph-style = reverse "#9c6cd3"
