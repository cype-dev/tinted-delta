# vim: ft=gitconfig
# Scheme System: base16
# Scheme Name: Decaf
# Scheme Author: Alex Mirrington (https://github.com/alexmirrington)
# Template Author: Bez Hermoso

# Configures difftool "delta" to ue light or dark mode based on the variant declared by the colorscheme.
[delta]
    syntax-theme = "ansi"
    light = false
    minus-style = reverse "#ff7f7b"
    minus-emph-style = reverse "#efb3f7"
    plus-style = reverse "#beda78"
    plus-emph-style = reverse "#efb3f7"
